<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.dltk.core.buildParticipant">
      <buildParticipant
            class="org.eclipse.twig.core.builder.TwigBuilder"
            id="org.eclipse.twig.core.builder"
            name="Twig template builder"
            nature="org.eclipse.php.core.PHPNature">
      </buildParticipant>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.php.core.phpsource"
            file-extensions="twig"
            id="twigtemplate"
            name="Twig Template"
            priority="high">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.wst.sse.core.modelHandler">
     <modelHandler
            default="yes"
            class="org.eclipse.twig.core.documentModel.handler.TwigModelHandler"
            associatedContentTypeId="org.eclipse.twig.core.twigtemplate"
            id="org.eclipse.twig.core.documentModel.handler">
      </modelHandler>         
   </extension>
   <extension
         id="org.eclipse.twig.core.documentfactories"
         name="Twig Document Creation Factory"
         point="org.eclipse.core.filebuffers.documentCreation">
      <factory
            class="org.eclipse.wst.sse.core.internal.filebuffers.BasicStructuredDocumentFactory"
            contentTypeId="org.eclipse.twig.core.twigtemplate">
      </factory>
   </extension>
   <extension
         id="TwigNature"
         name="Twig"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.twig.core.TwigNature">
         </run>
      </runtime>
      <content-type
            id="org.eclipse.twig.core.twigtemplate">
      </content-type>
   </extension>

</plugin>
