<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.twig.ui.editor.TwigStructuredEditor"
            contributorClass="org.eclipse.wst.html.ui.internal.edit.ui.ActionContributorHTML"
            default="true"
            id="org.eclipse.twig.editor"
            name="%editor.name"
            symbolicFontName="org.eclipse.wst.sse.ui.textfont">
         <contentTypeBinding
               contentTypeId="org.eclipse.twig.core.twigtemplate">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.wst.sse.ui.editorConfiguration">
		<sourceViewerConfiguration
			class="org.eclipse.twig.ui.editor.configuration.TwigStructuredTextViewerConfiguration"
			target="org.eclipse.twig.core.twigtemplate" />
			

		<contentOutlineConfiguration
			class="org.eclipse.wst.html.ui.views.contentoutline.HTMLContentOutlineConfiguration"
			target="org.eclipse.twig.core.twigtemplate" />
			
		<propertySheetConfiguration
			class="org.eclipse.wst.xml.ui.views.properties.XMLPropertySheetConfiguration"
			target="org.eclipse.twig.core.twigtemplate" />
		<provisionalConfiguration
			type="sourceeditingtexttools"
			class="org.eclipse.wst.xml.ui.internal.provisional.XMLSourceEditingTextTools"
			target="org.eclipse.twig.core.twigtemplate" />
			
		<provisionalConfiguration
			type="characterpairmatcher"
			class="org.eclipse.twig.ui.text.TwigDocumentRegionEdgeMatcher"
			target="org.eclipse.twig.core.twigtemplate" />
			
		<!-- 
		<provisionalConfiguration
			type="structuredtextfoldingprovider"
			class="org.eclipse.php.internal.ui.folding.PHPFoldingStructureProviderProxy"
			target="org.eclipse.twig.core.twigtemplate" />
		-->			
		<provisionalDefinition
			type="spellingregions"
			value="XML_COMMENT_TEXT, XML_CONTENT"
			target="org.eclipse.twig.core.twigtemplate" />         
   </extension>
   
   
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.twig.ui.contextmenu"
            objectClass="org.eclipse.dltk.core.IScriptProject">
         <menu
               id="org.eclipse.twig.ui.menu1"
               label="%menu.label"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="org.eclipse.twig.ui.popup.actions.AddRemoveTwigNatureAction"
               enablesFor="1"
               id="org.eclipse.twig.ui.toggleNatureAction"
               label="%action.label"
               menubarPath="org.eclipse.twig.ui.menu1/group1">
         </action>
      </objectContribution>
   </extension>
   
      
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.twig.ui.preferences.TwigBasePreferencePage"
            id="org.eclipse.twig.ui.preferences.TwigBasePreferencePage"
            name="%twigPageName">
      </page>
      <page
            category="org.eclipse.twig.ui.preferences.TwigBasePreferencePage"
            class="org.eclipse.twig.ui.TwigEditorPreferencePage"
            id="org.eclipse.twig.ui.preferences.TwigEditorPreferencePage"
            name="%twigEditorPageName">
      </page>
      <page
            category="org.eclipse.twig.ui.preferences.TwigEditorPreferencePage"
            class="org.eclipse.twig.ui.TwigTemplatePreferencePage"
            id="org.eclipse.twig.ui.preferences.TwigTemplatesPreferencePage"
            name="%templatesPreferencePageName">
      </page>
   </extension>
   <extension
         point="org.eclipse.dltk.core.completionEngine">
      <completionEngine
            class="org.eclipse.twig.ui.editor.completion.TwigCompletionEngine"
            nature="org.eclipse.twig.core.TwigNature"
            priority="100">
      </completionEngine>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipse.twig.ui.preferences.TwigPreferenceInitializer">
      </initializer>
   </extension>

</plugin>
