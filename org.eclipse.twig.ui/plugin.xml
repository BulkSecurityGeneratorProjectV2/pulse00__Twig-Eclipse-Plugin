<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.twig.ui.editor.TwigStructuredEditor"
            contributorClass="org.eclipse.php.internal.ui.editor.ActionContributorForPhp"
            default="true"
            id="org.eclipse.twig.editor"
            name="Twig Editor"
            symbolicFontName="org.eclipse.wst.sse.ui.textfont">
         <contentTypeBinding
               contentTypeId="org.eclipse.twig.core.twigtemplate">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.wst.sse.ui.editorConfiguration">
		<sourceViewerConfiguration
			class="org.eclipse.twig.ui.editor.configuration.TwigStructuredTextViewerConfiguration"
			target="org.eclipse.twig.core.twigtemplate" />
		<contentOutlineConfiguration
			class="org.eclipse.php.internal.ui.outline.PHPContentOutlineConfiguration"
			target="org.eclipse.twig.core.twigtemplate" />
		<propertySheetConfiguration
			class="org.eclipse.wst.xml.ui.views.properties.XMLPropertySheetConfiguration"
			target="org.eclipse.twig.core.twigtemplate" />
		<provisionalConfiguration
			type="sourceeditingtexttools"
			class="org.eclipse.wst.xml.ui.internal.provisional.XMLSourceEditingTextTools"
			target="org.eclipse.twig.core.twigtemplate" />
		<provisionalConfiguration
			type="characterpairmatcher"
			class="org.eclipse.php.internal.ui.text.PHPDocumentRegionEdgeMatcher"
			target="org.eclipse.twig.core.twigtemplate" />
		<provisionalConfiguration
			type="structuredtextfoldingprovider"
			class="org.eclipse.php.internal.ui.folding.PHPFoldingStructureProviderProxy"
			target="org.eclipse.twig.core.twigtemplate" />
		<provisionalDefinition
			type="spellingregions"
			value="XML_COMMENT_TEXT, PHP_CONTENT, XML_CONTENT"
			target="org.eclipse.twig.core.twigtemplate" />         
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.twig.ui.contextmenu"
            objectClass="org.eclipse.dltk.core.IScriptProject">
         <menu
               id="org.eclipse.twig.ui.menu1"
               label="Twig"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="org.eclipse.twig.ui.popup.actions.AddRemoveTwigNatureAction"
               enablesFor="1"
               id="org.eclipse.twig.ui.toggleNatureAction"
               label="Add/Remove Twig Nature"
               menubarPath="org.eclipse.twig.ui.menu1/group1">
         </action>
      </objectContribution>
   </extension>

</plugin>
